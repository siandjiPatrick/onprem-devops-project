hostname: ${hostname}
manage_etc_hosts: true
fqdn: ${hostname}.local
disable_root: false
ssh_pwauth: ${ssh_pwauth}

users:
%{ for user in users ~}
  - name: ${user.name}
    groups: ${user.groups}
    shell: ${user.shell}
    lock_passwd: ${user.lock_passwd}
    sudo: ${user.sudo}
%{ if user.passwd != "" }
    passwd: ${user.passwd}
%{ endif }
%{ if length(user.ssh_authorized_keys) > 0 }
    ssh_pwauth: ${ssh_pwauth}
    ssh_authorized_keys:
%{ for key in user.ssh_authorized_keys ~}
      - ${key}
%{ endfor }
%{ endif }
%{ endfor }


locale: de_DE.UTF-8
keyboard:
  layout: de
  variant: nodeadkeys  # ou "basic"
  toggle: ctrl_shift

write_files:
  - path: /etc/vconsole.conf
    content: |
      KEYMAP=de
  - path: /etc/default/keyboard
    content: |
      XKBMODEL=pc105
      XKBLAYOUT=de
      XKBVARIANT=nodeadkeys
      XKBOPTIONS=

runcmd:
  - localectl set-keymap de
  - localectl set-x11-keymap de nodeadkeys
package_update: false
package_upgrade: false

packages:
%{ for pkg in packages_to_install ~}
  - ${pkg}
%{ endfor }

runcmd:
%{ for cmd in run_command ~}
  - ${cmd}
%{ endfor }
